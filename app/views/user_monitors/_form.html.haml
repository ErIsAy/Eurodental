= form_for @user_monitor do |f|
  - if @user_monitor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_monitor.errors.count, "error")} prohibited this user_monitor from being saved:"
      %ul
        - @user_monitor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.number_field :user
  .field
    = f.label :info
    = f.text_field :info
  .actions
    = f.submit 'Save'
