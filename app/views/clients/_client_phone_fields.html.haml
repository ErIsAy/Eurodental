.nested-fields
  .input-field{:class => "col m8"}
    %i.material-icons.prefix phone
    = f.label :phone, "Tel.:"
    = f.text_field :phone,
      :placeholder => "(___) ___ ____ ",
      :type => "tel",
      :class => "phone-mask"

    = link_to_remove_association "-", f, class: "", style: "font-size: 50px;"
:javascript
    (function() {
        $(".phone-mask").mask("(999) 999-9999");
        Materialize.updateTextFields();
    })();
