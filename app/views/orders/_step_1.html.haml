.row.card.container{:style => "margin: 0 auto;"}
  .right{:style => "padding-right:15px;"}
    .input-fields.right
      %br/
      = f.check_box :coti
      = f.label :coti, "CotizaciÃ³n"
  .input-fields.left{:style => "padding-left:15px;"}
    %br
      %input#ant{:type => "checkbox"}
      %label{:for => "ant", :style => "padding-right:15px;"} Antagonista
      %input#foto{:type => "checkbox"}
      %label{:for => "foto"} Foto
    %br
      %input#mord{:type => "checkbox"}
      %label{:for => "mord"} Mordida

  - 4.times do
    %br
  .select.input-field{:class => "col s12 m6 s12"}
    -# = f.label :client_id
    = f.collection_select :client_id, Client.order(:name),:id,:name, include_blank: false, prompt: 'Seleccionar Cliente'

  .input-field{:class => "col s12 m6 s12"}
    %i.material-icons.prefix account_circle
    = f.label :patient_name, "Nombre del Paciente"
    = f.text_field :patient_name


  .input-field{:class => "col m12 s6"}
    -# %i.material-icons.prefix tag_faces
    -# = f.label :sex, "Sexo"
    -# = f.select :sex, ['Femenino', 'Masculino'],
    -#   prompt: 'Sexo'
    -# = f.radio_button :sex, 'Femenino'
    -# = f.label :sex_Femenino, 'Femenino'
    -# = f.radio_button :sex, 'Masculino'
    -# = f.label :sex_Masculino, 'Masculino'
    %i.material-icons.prefix tag_faces
    = f.radio_button :sex, 'Femenino'
    = f.label :sex, 'Femenino', :value => 'Femenino'
    = f.radio_button :sex, 'Masculino'
    = f.label :sex, 'Masculino', :value => 'Masculino'


  .input-field{:class => "col s12 m6 s12"}
    %i.material-icons.prefix perm_identity
    = f.label :age, "Edad"
    = f.number_field :age

  .input-field{:class => "col s12 m6 s12"}
    %i.material-icons.prefix today
    = f.label :order_date, "Fecha de Entrega"
    = f.text_field :order_date,
      :class => "datepicker"

  .input-field.col.s12#textarea1
    %i.material-icons.prefix mode_edit
    = f.label :client_note, "Notas del Cliente"
    = f.text_area :client_note,
      :class => "materialize-textarea",
      :length => 250

  .input-field.col.s12
    %i.material-icons.prefix mode_edit
    = f.label :other_note, "Otras Notas"
    = f.text_area :other_note,
      :class => "materialize-textarea"


