:javascript
  $( document ).ready(function(){
    document.getElementById("step_1").classList.add("complete");
    });
  $('.modal-trigger').leanModal();

  /*refill function for each tooth in the chart verify if value is equal to 1 and fill the color*/
  (function ()
    {
      for(i=1; i<33; i++) {
        if(document.getElementById("t"+i).value != 'null'){var z = document.getElementById("t"+i).value;}
        //var z = document.getElementById("t"+i).value;
        if (String(z) == 1) {$("#Tooth"+i).css({ fill: "lightskyblue" });}

      }
