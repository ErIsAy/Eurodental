.row.card.container{:style => "margin: 0 auto;"}
  %div{:class => "col s12 m6"}
    = render :partial => 'layouts/tooth_chart'
    = render 'tooth_fields', :f => f


  .container.right#order_collection{:class => "col s12 m4"}

    .input-fields{:style => "", :class => "col s12"}
